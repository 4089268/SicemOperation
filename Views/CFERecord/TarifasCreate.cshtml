@model SicemOperation.Entities.CFETarifa

@{
    ViewBag.Title = "Nueva Tarifa";
    ViewData["PageTitle"] = "Registrar Nueva Tarifa";
    var breadcrumbElements = new List<dynamic>();
    breadcrumbElements.Add( new { Title = "Catalogos", Route = "/CFERecord/catalogos" });
    breadcrumbElements.Add( new { Title = "Tarifas", Route = "/CFERecord/catalogos/tarifas" });
    breadcrumbElements.Add( new { Title = "Nuevo", Route = "" });
}

<partial name="PageHeader" model="@breadcrumbElements" />

<div class="row mt-4">
    <div class="border bg-white p-3 w-100 max-w-screen-xl mx-auto">
        <form asp-action="TarifasCreate" method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Inactivo" class="form-check-input" />
                <label asp-for="Inactivo" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
                <a asp-action="TarifasIndex" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>


