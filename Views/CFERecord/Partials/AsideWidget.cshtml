@model SicemOperation.Models.DTO.CFE.ConsumoDTO

<div class="widget">
    <div class="category_sidebar">
        <aside class="product-sidebar-widget mb-15">
            <div class="title mb-15 mt-10">
                <h6>Filtro</h6>
            </div>
            <form asp-controller="CFERecord" asp-action="Consumo" method="get">
                <div class="form-group row">
                    <div class="col-12 mb-2">
                        <label asp-for="Af" class="color-dark fs-14 fw-500 align-center mb-10"></label>
                        <input asp-for="Af" type="number" class="form-control ip-light radius-xs b-light px-15" placeholder="Año" />
                    </div>
                    <div class="col-12 mb-2">
                        <label asp-for="Mf" class="color-dark fs-14 fw-500 align-center mb-10"></label>
                        <input asp-for="Mf" type="number" class="form-control ip-light radius-xs b-light px-15" placeholder="Año" />
                    </div>
                    <div class="col-12 mt-2">
                        <label asp-for="MedidorId" class="il-gray fs-14 fw-500 align-center mb-10"></label>
                        <select asp-for="MedidorId" asp-items="@Model.MedidoresListItems" class="form-control px-15 select2"></select>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-30">
                    <button type="submit" class="btn btn-primary btn-sm btn-squared text-capitalize px-30">Consultar</button>
                </div>
            </form>
        </aside>
    </div>
</div>