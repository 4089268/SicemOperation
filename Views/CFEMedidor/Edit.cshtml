@model SicemOperation.Entities.CFEMedidor

@{
    ViewBag.Title = "Editar Medidor";
    ViewData["PageTitle"] = "Editar Medidor";
    var breadcrumbElements = new List<dynamic>();
    breadcrumbElements.Add( new { Title = "Catalogos", Route = "/CFERecord/catalogos" });
    breadcrumbElements.Add( new { Title = "Catalogo Medidores", Route = "/CFERecord/catalogos/CFEMedidor" });
    breadcrumbElements.Add( new { Title = "Editar", Route = "" });
}

<partial name="PageHeader" model="@breadcrumbElements" />

<div class="row mt-4">
    <div class="border bg-white p-3 w-100 max-w-screen-xl mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdOrganismo" class="control-label"></label>
                <select asp-for="IdOrganismo" class="form-control" asp-items="ViewBag.Organismos"></select>
                <span asp-validation-for="IdOrganismo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RPU" class="control-label"></label>
                <input asp-for="RPU" class="form-control" />
                <span asp-validation-for="RPU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumMedidor" class="control-label"></label>
                <input asp-for="NumMedidor" class="form-control" />
                <span asp-validation-for="NumMedidor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicacion" class="control-label"></label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitud" class="control-label"></label>
                <input asp-for="Latitud" class="form-control" />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitud" class="control-label"></label>
                <input asp-for="Longitud" class="form-control" />
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CargaConectada" class="control-label"></label>
                <input asp-for="CargaConectada" class="form-control" />
                <span asp-validation-for="CargaConectada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DemandaContratada" class="control-label"></label>
                <input asp-for="DemandaContratada" class="form-control" />
                <span asp-validation-for="DemandaContratada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTarifa" class="control-label"></label>
                <select asp-for="IdTarifa" class="form-control" asp-items="ViewBag.Tarifas"></select>
                <span asp-validation-for="IdTarifa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProceso" class="control-label"></label>
                <select asp-for="IdProceso" class="form-control" asp-items="ViewBag.Procesos"></select>
                <span asp-validation-for="IdProceso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdZona" class="control-label"></label>
                <select asp-for="IdZona" class="form-control" asp-items="ViewBag.Zonas"></select>
                <span asp-validation-for="IdZona" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Inactivo" class="form-check-input" />
                <label asp-for="Inactivo" class="form-check-label"></label>
            </div>
            <div class="form-group d-flex align-items-center">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>


