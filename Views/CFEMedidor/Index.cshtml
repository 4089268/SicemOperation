@model IEnumerable<SicemOperation.Entities.CFEMedidor>
@{
    ViewBag.Title = "Catalogo Medidores";
    ViewData["PageTitle"] = "Catalogo Medidores";
    var breadcrumbElements = new List<dynamic>();
    breadcrumbElements.Add( new { Title = "Catalogos", Route = "/CFERecord/catalogos" });
    breadcrumbElements.Add( new { Title = "Medidores", Route ="" });
}

<partial name="PageHeader" model="@breadcrumbElements" />

<div class="row my-2">
    <p class="border w-100 max-w-screen-xl mx-auto bg-white p-3">
        <a asp-action="Create" class="btn btn-primary">Registar Nuevo</a>
    </p>
</div>


<div class="row my-2">
    <div class="border bg-white p-3 w-100 max-w-screen-xl mx-auto">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Organismo</th>
                    <th>RPU</th>
                    <th>Número Medidor</th>
                    <th>Ubicación</th>
                    <th>Tarifa</th>
                    <th>Proceso</th>
                    <th>Zona</th>
                    <th>Inactivo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Organismo?.Nombre</td>
                        <td>@item.RPU</td>
                        <td>@item.NumMedidor</td>
                        <td>@item.Ubicacion</td>
                        <td>@item.Tarifa?.Nombre</td>
                        <td>@item.Proceso?.Proceso</td>
                        <td>@item.Zona?.Zona</td>
                        <td>@(item.Inactivo ? "Si" : "No")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>